extends templates/base
block page
    - var pageTitle = 'about'
    -
      var people = [
        devs = [
            {name: "Veld",      desc: "Breaker of builds / creator",  uid:"121919449996460033", bg: "/img/donate/veld_header.jpg", github:"https://github.com/velddev", twitter: "https://twitter.com/memeki", twitch: "https://www.twitch.tv/velddev"},
            {name: "Vallode",   desc: "Bird collector",     uid:"129947119070085120", bg: "https://i.imgur.com/hgx6VUj.jpg", github:"https://github.com/vallode"},
            {name: "Fuzen",     desc: "Code connoisseur", uid:"default", github:"https://github.com/Fuzen-py"},
            {name: "GrammarJew",desc: "Github corrector",     uid:"default", github:"https://github.com/thegrammarjew"},
        ],
        mods = [
            {name: "xRappy",    desc: "Server Admin", uid: "102405515060994048"},
            {name: "IA",        desc: "Server Admin", uid: "147447799573774336"},
            {name: "Tal",       desc: "Server Mod",   uid: "default"},
            {name: "Meagan",    desc: "Server Mod",   uid: "default"},
            {name: "Homer12346",desc: "Server Maid",   uid: "default"},
        ],
        contribs = [
            "AlexFlipnote", "Brandon",
            "Drummss", "Florestina",
            "Karen", "Luke",
            "Milk", "n0t",
            "Nukegirl", "Phanrazak",
            "Rie", "Rosie"
        ]
      ]

    h1.first About
    include includes/nav
    div.content
      .about-split
        .side
          h1.bigger So, what's Miki?
          hr
          p Miki is a bot that focuses on community related events. She can do anything from playing games with you, to showing you progress, and ofcourse with memes. She has a little bit of everything and all features are made with hand by yours truly. Her design is based on the Vocaloid #[a(href="http://vocaloid.wikia.com/wiki/SF-A2_miki") SF-A2 Miki], but we give her a little bit of our own flair!
      h1.nm The dev squad.
      .about-section
          each dev in devs
              .about-tag
                  if dev.bg
                      div.blur-bg(style="background: url(#{dev.bg}) no-repeat center center !important; background-size: cover !important; filter: brightness(0.8) blur(3px)")
                  else
                      div.blur-bg(style="filter: none !important")
                  if dev.uid
                    .about-circle
                        img(src="https://miki-cdn.nyc3.digitaloceanspaces.com/avatars/#{dev.uid}.png")
                  .about-content
                      h2= dev.name
                      if dev.desc
                          p= dev.desc
                      else
                          p Developer
                      .about-links
                          if dev.github
                              a(href=dev.github target="_blank" rel="noopener")
                                  i.fab.fa-github.fa-2x(aria-hidden="true")
                          if dev.twitter
                              a(href=dev.twitter target="_blank" rel="noopener")
                                  i.fab.fa-twitter.fa-2x(aria-hidden="true")
                          if dev.twitch
                              a(href=dev.twitch target="_blank" rel="noopener")
                                  i.fab.fa-twitch.fa-2x(aria-hidden="true")

      br
      h1.nm The mod squad.
      .about-section
          each mod in mods
              .about-tag
                  if mod.bg
                      div.blur-bg(style="background: url(#{mod.bg}) no-repeat center center !important; background-size: cover !important; filter: brightness(0.8) blur(3px)")
                  else
                      div.blur-bg(style="filter: none !important")
                  if mod.uid
                    .about-circle
                        img(src="https://miki-cdn.nyc3.digitaloceanspaces.com/avatars/#{mod.uid}.png")
                  .about-content
                      h2= mod.name
                      if mod.desc
                          p= mod.desc
                      else
                          p Moderator
                      .about-links
                          if mod.github
                              a(href=mod.github target="_blank" rel="noopener")
                                  i.fa.fa-github.fa-2x(aria-hidden="true")
                          if mod.twitter
                              a(href=mod.twitter target="_blank" rel="noopener")
                                  i.fa.fa-twitter.fa-2x(aria-hidden="true")
                          if mod.twitch
                              a(href=mod.twitch target="_blank" rel="noopener")
                                  i.fa.fa-twitch.fa-2x(aria-hidden="true")
      br
      h1.nm Alumni
      div.about-mentions
        for user in contribs
            p= user